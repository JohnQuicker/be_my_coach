<!DOCTYPE html>
<html>
  <head>
    <title>Dashboard of BeMyCoach</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- 用container-fluid风格装饰题头和主体 -->
    <div class="container-fluid">
      <%= render "common/navbar" %>
      <%= render "common/flashes" %>
      <div class="row">
        <div class="col-md-1">
          <ul class="nav nav-pills nav-stacked" style="max-width: 200px; padding-top:20px;">
            <li class="active"><%= link_to("课题", admin_tasks_path ) %> </li>
            <li class="active"><%= link_to("项目", admin_tasks_path ) %> </li>
          </ul>
        </div>
        <div class="col-md-11">
          <%= yield %>
        </div>
      </div>
    </div>
    <!-- 不用container-fluid风格装饰地脚，什么也不用 -->
    <%= render "common/footer" %>
  </body>
</html>
