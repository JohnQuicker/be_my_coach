<div class="panel panel-info" style="margin-top: 20px;">
  <!-- Default panel contents -->
  <div class="panel-heading">课题列表</div>
  <div class="panel-body">
    <p>这里是发布过的所有课题</p>
  </div>

  <!-- Table -->
  <table class="table">
    <thead>
      <tr>
        <td>课题名称</td>
        <!-- <td>问题描述</td> -->
        <td>期望时限(天)</td>
        <td>承诺礼金(RMB)</td>
        <td>发布时间</td>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td>
          <%= link_to(task.title, task_path(task)) %>
          <span class = "pull-right" style="margin: 2px 4px 0px 4px;">
          <% if current_user && current_user.be_concerned_about?(task) %>
            <label class = "label label-success" style="padding-bottom: 5px;"> 已经关注 </label>
          <% else %>
            <label class = "label label-warning"> 未关注它 </label>
          <% end %>
          <% if current_user && current_user.have_resumed_for?(task) %>
            <label class = "label label-success" style="padding-bottom: 5px;"> 已经联系 </label>
          <% else %>
            <label class = "label label-warning"> 尚未联系 </label>
          <% end %>
          </span>
        </td>
        <!-- <td>
          <%= task.description %>
        </td> -->
        <td>
          <%= task.hope_dead_line %>
        </td>
        <td>
          <%= task.commit_wage %>
        </td>
        <td>
          <%= task.created_at %>
        </td>
      </tr>
      <% end %>
    </tbody>
</div>
