<h1>添加一个课题</h1>

<%= simple_form_for @task do |f| %>

  <%= f.input :title, :label => "课题简称" %>
  <%= f.input :description, :label => "课题详细说明" %>
  <%= f.input :hope_dead_line, :label => "预期几日完成" %>
  <%= f.input :commit_wage, :label => "承诺答谢礼金" %>
  <%= f.input :contact_email, :label => "联系邮箱" %>
  <%= f.input :is_hidden, :label => "暂不公开" %>
  <%= f.submit "提交", class: "btn btn-primary", data: { :disable_with => '施工中……' } %>

<% end %>
